@page
@model EvetWebsite.Areas.Admin.Pages.UserManagement.DetailsModel
@{
}
<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">DETAILS </h3>
        <h2>@Model.UserDatas.Fullname</h2>

        <a asp-page="./UpdateUserPermission" asp-route-uid="@Model.UserDatas.Id" asp-route-fullname="@Model.UserDatas.Fullname" class="btn btn-danger btn-sm">Update Role</a>
        <h5>Update the role to enable proper navigations</h5>
    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <dl class="row">



                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserDatas.PhoneNumber)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserDatas.PhoneNumber)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserDatas.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserDatas.Email)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserDatas.Office)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserDatas.Office)
                    </dd>



                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserDatas.Date)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserDatas.Date)
                    </dd>

                </dl>
                
            </div>

        </div>
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
        <a href="javascript:history.back()" class="btn bg-gradient-warning btn-sm">Back</a>
    </div>
</div>
 