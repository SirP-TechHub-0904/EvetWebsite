@page
@model EvetWebsite.Areas.Admin.Pages.IReservationType.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">DETAIL RESERVATION TYPE</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ReservationType.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ReservationType.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ReservationType.Note)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.Raw(Model.ReservationType.Note)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ReservationType.Note)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.Raw(Model.ReservationType.Note)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ReservationType.ImageKey)
                    </dt>
                    <dd class="col-sm-10">
                        <img src="@Model.ReservationType.ImageUrl" class="img-fluid" style="height:100px;"/>
                     </dd>
                </dl>
            </div>

            <a asp-page="./Edit" asp-route-id="@Model.ReservationType.Id" class="btn bg-gradient-warning btn-sm" style="float:right;">Update</a>
            <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

        </div>
    </div>


    <!-- /.row -->
</div>
<!-- /.card-body -->
<div class="card-footer">
</div> 