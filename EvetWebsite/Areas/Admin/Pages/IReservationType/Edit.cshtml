@page
@model EvetWebsite.Areas.Admin.Pages.IReservationType.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">EDIT RESERVATION TYPE</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ReservationType.Id" />
                    <input type="hidden" asp-for="ReservationType.Id" />
                    <input type="hidden" asp-for="ReservationType.Id" />
                    <div class="form-group">
                        <label asp-for="ReservationType.Name" class="control-label"></label>
                        <input asp-for="ReservationType.Name" class="form-control" />
                        <span asp-validation-for="ReservationType.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ReservationType.Note" class="control-label"></label>
                        <textarea asp-for="ReservationType.Note" class="form-control"></textarea>
                        <span asp-validation-for="ReservationType.Note" class="text-danger"></span>
                    </div> 
                    <div class="form-group">
                        <label class="control-label">Image</label><br />
                        <input type="file" class="control-label" asp-for="imagefile" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>