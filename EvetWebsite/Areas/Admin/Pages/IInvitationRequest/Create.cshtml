@page
@model EvetWebsite.Areas.Admin.Pages.IInvitationRequest.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">NEW INVITATION REQUEST</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="InvitationRequest.Fullname" class="control-label"></label>
                        <input asp-for="InvitationRequest.Fullname" class="form-control" />
                        <span asp-validation-for="InvitationRequest.Fullname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="InvitationRequest.Phone" class="control-label"></label>
                        <input asp-for="InvitationRequest.Phone" class="form-control" />
                        <span asp-validation-for="InvitationRequest.Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="InvitationRequest.Email" class="control-label"></label>
                        <input asp-for="InvitationRequest.Email" class="form-control" />
                        <span asp-validation-for="InvitationRequest.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="InvitationRequest.Office" class="control-label"></label>
                        <input asp-for="InvitationRequest.Office" class="form-control" />
                        <span asp-validation-for="InvitationRequest.Office" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="InvitationRequest.Date" class="control-label"></label>
                        <input asp-for="InvitationRequest.Date" class="form-control" />
                        <span asp-validation-for="InvitationRequest.Date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="InvitationRequest.Note" class="control-label"></label>
                        <input asp-for="InvitationRequest.Note" class="form-control" />
                        <span asp-validation-for="InvitationRequest.Note" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="InvitationRequest.Status" class="control-label"></label>
                        <input asp-for="InvitationRequest.Status" class="form-control" />
                        <span asp-validation-for="InvitationRequest.Status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

