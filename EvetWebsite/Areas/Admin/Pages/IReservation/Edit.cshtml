@page
@model EvetWebsite.Areas.Admin.Pages.IReservation.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">EDIT RESERVATION</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Reservation.Id" />
                    <div class="form-group">
                        <label asp-for="Reservation.Fullname" class="control-label"></label>
                        <input asp-for="Reservation.Fullname" class="form-control" />
                        <span asp-validation-for="Reservation.Fullname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Reservation.Phone" class="control-label"></label>
                        <input asp-for="Reservation.Phone" class="form-control" />
                        <span asp-validation-for="Reservation.Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Reservation.Email" class="control-label"></label>
                        <input asp-for="Reservation.Email" class="form-control" />
                        <span asp-validation-for="Reservation.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Reservation.Office" class="control-label"></label>
                        <input asp-for="Reservation.Office" class="form-control" />
                        <span asp-validation-for="Reservation.Office" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Reservation.Room" class="control-label"></label>
                        <input asp-for="Reservation.Room" class="form-control" />
                        <span asp-validation-for="Reservation.Room" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Reservation.RoomType" class="control-label"></label>
                        <input asp-for="Reservation.RoomType" class="form-control" />
                        <span asp-validation-for="Reservation.RoomType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Reservation.ReservationTypeId" class="control-label">Hotel</label>
                        <select asp-for="Reservation.ReservationTypeId" class="form-control" asp-items="ViewBag.ReservationTypeId"></select>
                        <span asp-validation-for="Reservation.ReservationTypeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Reservation.Date" class="control-label"></label>
                        <input asp-for="Reservation.Date" class="form-control" />
                        <span asp-validation-for="Reservation.Date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Reservation.Note" class="control-label"></label>
                        <input asp-for="Reservation.Note" class="form-control" />
                        <span asp-validation-for="Reservation.Note" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Image</label><br />
                        <input type="file" class="control-label" asp-for="imagefile" accept="image/*" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>