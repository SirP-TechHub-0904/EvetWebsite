@page
@model EvetWebsite.Areas.Admin.Pages.IReservation.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">DELETE RESERVATION</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <h3>Are you sure you want to delete this?</h3>
                <div>
                    <h4>Reservation</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Reservation.Fullname)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Reservation.Fullname)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Reservation.Phone)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Reservation.Phone)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Reservation.Email)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Reservation.Email)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Reservation.Office)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Reservation.Office)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Reservation.ReservationType)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Reservation.ReservationType.Id)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Reservation.Date)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Reservation.Date)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Reservation.Note)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Reservation.Note)
                        </dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="Reservation.Id" />
                        <input type="submit" value="Delete" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </form>

                </div>
            </div>


            <!-- /.row -->
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
    </div>
