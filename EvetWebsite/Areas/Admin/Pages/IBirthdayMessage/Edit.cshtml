@page
@model EvetWebsite.Areas.Admin.Pages.IBirthdayMessage.EditModel

@{
    ViewData["Title"] = "Edit";
}


<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">EDIT BIRTHDAY MESSAGES</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="BirthdayMessage.Id" />
                    <div class="form-group">
                        <label asp-for="BirthdayMessage.Fullname" class="control-label"></label>
                        <input asp-for="BirthdayMessage.Fullname" class="form-control" />
                        <span asp-validation-for="BirthdayMessage.Fullname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BirthdayMessage.Office" class="control-label"></label>
                        <input asp-for="BirthdayMessage.Office" class="form-control" />
                        <span asp-validation-for="BirthdayMessage.Office" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BirthdayMessage.Date" class="control-label"></label>
                        <input asp-for="BirthdayMessage.Date" class="form-control" />
                        <span asp-validation-for="BirthdayMessage.Date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BirthdayMessage.Email" class="control-label"></label>
                        <input asp-for="BirthdayMessage.Email" class="form-control" />
                        <span asp-validation-for="BirthdayMessage.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BirthdayMessage.Message" class="control-label"></label>
                        <input asp-for="BirthdayMessage.Message" class="form-control" />
                        <span asp-validation-for="BirthdayMessage.Message" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
