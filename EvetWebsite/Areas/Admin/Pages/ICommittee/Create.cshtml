@page
@model EvetWebsite.Areas.Admin.Pages.ICommittee.CreateModel

@{
    ViewData["Title"] = "Create";
}


<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">NEW COMMITTEE</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Committee.Name" class="control-label"></label>
                        <input asp-for="Committee.Name" class="form-control" />
                        <span asp-validation-for="Committee.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Committee.Office" class="control-label"></label>
                        <input asp-for="Committee.Office" class="form-control" />
                        <span asp-validation-for="Committee.Office" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Committee.CommitteeCategoryId" class="control-label">Committee</label>
                        <select asp-for="Committee.CommitteeCategoryId" class="form-control" asp-items="ViewBag.CommitteeCategoryId"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
