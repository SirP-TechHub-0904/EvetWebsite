@page
@model EvetWebsite.Areas.Admin.Pages.IDonations.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">DETAILS DONATION</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Donation.FirstName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Donation.FirstName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Donation.LastName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Donation.LastName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Donation.Phone)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Donation.Phone)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Donation.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Donation.Email)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Donation.Office)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Donation.Office)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Donation.Date)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Donation.Date)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Donation.Note)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Donation.Note)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Donation.ApprovedBy)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Donation.ApprovedBy)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Donation.Status)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Donation.Status)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Donation.PaymentType)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Donation.PaymentType)
                    </dd>
                </dl>
            </div>

            <a asp-page="./Edit" asp-route-id="@Model.Donation.Id" class="btn bg-gradient-warning btn-sm" style="float:right;">Update</a>
            <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

        </div>
    </div>


    <!-- /.row -->
</div>
<!-- /.card-body -->
<div class="card-footer">
</div> 