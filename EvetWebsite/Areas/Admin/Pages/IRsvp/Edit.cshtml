@page
@model EvetWebsite.Areas.Admin.Pages.IRsvp.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">EDIT RSVP</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="RSVP.Id" />
                    <div class="form-group">
                        <label asp-for="RSVP.Fullname" class="control-label"></label>
                        <input asp-for="RSVP.Fullname" class="form-control" />
                        <span asp-validation-for="RSVP.Fullname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RSVP.Phone" class="control-label"></label>
                        <input asp-for="RSVP.Phone" class="form-control" />
                        <span asp-validation-for="RSVP.Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RSVP.Email" class="control-label"></label>
                        <input asp-for="RSVP.Email" class="form-control" />
                        <span asp-validation-for="RSVP.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RSVP.Office" class="control-label"></label>
                        <input asp-for="RSVP.Office" class="form-control" />
                        <span asp-validation-for="RSVP.Office" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RSVP.Date" class="control-label"></label>
                        <input asp-for="RSVP.Date" class="form-control" />
                        <span asp-validation-for="RSVP.Date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RSVP.Note" class="control-label"></label>
                        <input asp-for="RSVP.Note" class="form-control" />
                        <span asp-validation-for="RSVP.Note" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="RSVP.Present" /> @Html.DisplayNameFor(model => model.RSVP.Present)
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>